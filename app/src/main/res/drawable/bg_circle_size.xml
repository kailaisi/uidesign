<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="oval">
                    <corners android:radius="12dp" />
                    <solid android:color="@color/product_purple" />
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/blue_grey_400" />
        </shape>
    </item>
</layer-list>